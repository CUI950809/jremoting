<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<import resource="classpath:jremoting-context.xml"/>
	
	<bean id="testService" class="com.github.jremoting.spring.JRemotingProviderBean">
		<property name="serviceName" value="com.github.jremoting.core.test.TestService" />
		<property name="serviceVersion" value="1.0" />
		<property name="pipeline" ref="serverPipeline" />
		<property name="dispatcher" ref="serverDispatcher" />
		<property name="target" ref="testServiceImpl"></property>
	</bean>
	
	<bean id="testServiceImpl" class="com.github.jremoting.core.test.TestServiceImpl"></bean>
	
		
	<bean id="serverDispatcher" class="com.github.jremoting.dispatcher.JRemotingServerDispatcher" init-method="start">
		<constructor-arg><ref bean="eventLoopGroup"/></constructor-arg>
		<constructor-arg><ref bean="eventLoopGroup"/></constructor-arg>
		<constructor-arg><ref bean="protocals"/></constructor-arg>
		<constructor-arg><ref bean="executor"/></constructor-arg>
		<property name="port" value="8686"></property>
	</bean>
	
	<bean id="executor"
		class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="corePoolSize" value="5" />
		<property name="maxPoolSize" value="100" />
		<property name="queueCapacity" value="25" />
	</bean>
	
</beans>